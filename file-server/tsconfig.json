{
  "compilerOptions": {
    "target": "ES6", // Target ESNext for modern JavaScript features
    "module": "CommonJS", // Use ESNext for module system
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your source files
    "esModuleInterop": true, // Enable interop between CommonJS and ES modules
    "moduleResolution": "Node", // Use Node module resolution
    "allowSyntheticDefaultImports": true, // Allow synthetic default imports
    "strict": true, // Enable strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in file names
  },
  "include": ["src"], // Include the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
